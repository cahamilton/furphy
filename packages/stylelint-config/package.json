{
  "name": "@cahamilton/stylelint-config",
  "version": "0.3.12",
  "description": "Configuration for Stylelint",
  "author": "Carl Hamilton <github@carlhamilton.dev>",
  "homepage": "https://github.com/cahamilton/furphy#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cahamilton/furphy.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "scripts": {
    "clean": "rm -rfv dist/",
    "build": "tsc",
    "prebuild": "npm run clean && npm run test",
    "prepack": "npm run build",
    "eslint": "eslint . --ext .ts",
    "jest": "jest",
    "prettier": "prettier --check '**/*.ts'",
    "test": "npm run prettier && npm run eslint && npm run jest"
  },
  "dependencies": {
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "postcss-syntax": "^0.36.2",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-property-sort-order-smacss": "^8.0.0",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-config-styled-components": "^0.1.1"
  },
  "devDependencies": {
    "@cahamilton/eslint-config": "^0.3.12",
    "@cahamilton/prettier-config": "^0.3.12"
  },
  "peerDependencies": {
    "stylelint": "^14.0.0"
  },
  "prettier": "@cahamilton/prettier-config"
}
