  },
  "devDependencies": {
    "@cahamilton/eslint-config": "^0.2.16",
    "@types/jest": "^26.0.20",
    "@types/stylelint": "^9.10.1",
    "eslint": "^7.20.0",
    "globby": "^11.0.1",
    "jest": "^26.6.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "styled-components": "^5.2.1",
    "stylelint": "^13.12.0",
    "ts-jest": "^26.5.1",
