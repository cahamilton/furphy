{
  "name": "@cahamilton/stylelint-config",
  "version": "0.3.2",
  "description": "Configuration for Stylelint",
  "author": "Carl Hamilton <carlanthonyhamilton@gmail.com>",
  "homepage": "https://github.com/cahamilton/furphy#readme",
  "license": "MIT",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cahamilton/furphy.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf dist",
    "compile": "tsc",
    "eslint": "eslint . --ext .ts",
    "jest": "jest",
    "prettier": "prettier --check '**/*.ts'",
    "test": "yarn run prettier && yarn run eslint && yarn run jest"
  },
  "dependencies": {
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "postcss-syntax": "^0.36.2",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-property-sort-order-smacss": "^8.0.0",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-config-styled-components": "^0.1.1"
  },
  "devDependencies": {
    "@cahamilton/eslint-config": "^0.3.2",
    "@types/jest": "^27.0.2",
    "eslint": "^7.20.0",
    "globby": "^11.0.1",
    "jest": "^27.3.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "styled-components": "^5.2.1",
    "stylelint": "^14.0.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.0.0"
  },
  "peerDependencies": {
    "stylelint": "^14.0.0"
  },
  "prettier": "@cahamilton/prettier-config"
